---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Handcrafted goods made with love by local artisans" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Source+Serif+4:ital,opsz,wght@0,8..60,300;0,8..60,400;0,8..60,500;1,8..60,400&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title} | Hearth & Hand Crafts</title>
  </head>
  <body class="min-h-screen flex flex-col paper-texture">
    <!-- Header -->
    <header class="relative z-10">
      <nav class="max-w-6xl mx-auto px-6 py-6">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="group flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-terracotta/10 flex items-center justify-center group-hover:bg-terracotta/20 transition-colors">
              <svg class="w-6 h-6 text-terracotta" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2C8 6 4 10 4 14c0 4.4 3.6 8 8 8s8-3.6 8-8c0-4-4-8-8-12z"/>
                <path d="M12 22v-8"/>
                <path d="M8 14c2-1 4-1 4 2"/>
                <path d="M16 14c-2-1-4-1-4 2"/>
              </svg>
            </div>
            <div>
              <span class="font-[family-name:var(--font-display)] text-xl font-semibold text-charcoal tracking-tight">Hearth & Hand</span>
              <span class="block text-xs text-charcoal-light tracking-widest uppercase">Crafts</span>
            </div>
          </a>

          <!-- Navigation -->
          <div class="flex items-center gap-8">
            <a href="/" class="nav-link text-sm tracking-wide">Home</a>
            <a href="/contact" class="nav-link text-sm tracking-wide">Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow relative z-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 bg-charcoal text-cream-dark mt-auto">
      <!-- Decorative top border -->
      <div class="h-1 bg-gradient-to-r from-terracotta via-sage to-terracotta"></div>

      <div class="max-w-6xl mx-auto px-6 py-16">
        <div class="grid md:grid-cols-3 gap-12">
          <!-- Brand -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-full bg-cream/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-terracotta" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2C8 6 4 10 4 14c0 4.4 3.6 8 8 8s8-3.6 8-8c0-4-4-8-8-12z"/>
                  <path d="M12 22v-8"/>
                  <path d="M8 14c2-1 4-1 4 2"/>
                  <path d="M16 14c-2-1-4-1-4 2"/>
                </svg>
              </div>
              <span class="font-[family-name:var(--font-display)] text-lg font-semibold">Hearth & Hand Crafts</span>
            </div>
            <p class="text-cream/60 text-sm leading-relaxed">
              Every piece tells a story. Handcrafted with love by local artisans who pour their heart into every creation.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="font-[family-name:var(--font-accent)] text-2xl text-terracotta mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/" class="text-cream/60 hover:text-cream transition-colors text-sm">Home</a></li>
              <li><a href="/contact" class="text-cream/60 hover:text-cream transition-colors text-sm">Contact Us</a></li>
            </ul>
          </div>

          <!-- Contact Info -->
          <div>
            <h4 class="font-[family-name:var(--font-accent)] text-2xl text-terracotta mb-4">Get in Touch</h4>
            <ul class="space-y-2 text-sm text-cream/60">
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                hello@hearthandhand.craft
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Portland, Oregon
              </li>
            </ul>
          </div>
        </div>

        <div class="border-t border-cream/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-cream/40 text-xs">
            &copy; {new Date().getFullYear()} Hearth & Hand Crafts. Made with care.
          </p>
          <p class="font-[family-name:var(--font-accent)] text-cream/60 text-lg">
            "Every stitch, every brushstroke, every carve â€” made just for you"
          </p>
        </div>
      </div>
    </footer>

    <!-- Decorative botanical elements -->
    <svg class="botanical-accent top-20 right-0 w-64 h-64 text-sage" viewBox="0 0 100 100" fill="currentColor">
      <path d="M80 50c0-20-15-35-30-40 5 15 5 30-5 45 15-5 25-5 35 5-5-3-5-7 0-10z"/>
    </svg>
    <svg class="botanical-accent bottom-40 left-0 w-48 h-48 text-terracotta rotate-180" viewBox="0 0 100 100" fill="currentColor">
      <path d="M80 50c0-20-15-35-30-40 5 15 5 30-5 45 15-5 25-5 35 5-5-3-5-7 0-10z"/>
    </svg>
  </body>
</html>
